<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-white text-center">
      <h3 class="text-dark">Registro de Usuario</h3>
    </div>
    <div class="card-body text-right">
      <form action="/registros/newRegistro" method="POST">
        <div class="mb-3">
          <label for="title">Cedula:</label>
          <input
            type="text"
            name="id"
            class="form-control"
            placeholder="ingresar numero de cedula"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="description">Nombre:</label>
          <input
            type="text"
            name="nombre"
            class="form-control"
            placeholder="ingresar nombre"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="title">Tipo de usuario:</label>
          <input
            type="text"
            name="tipo_usuario"
            class="form-control"
            placeholder="ingresar tipo de usuario"
            autofocus
          />
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Registrar
        </button>
      </form>
    </div>
  </div>
</div>